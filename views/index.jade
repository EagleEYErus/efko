extends layout

block content
  .container
    .col-sm-10
      .row
        h1= title
        label#account-info= info
        if root === 3
          .text-right
            a(href='/add') + Добавить
        table.table.table-bordered.table-hover
          thead
            tr
              th Проблема
              th Решение
              th Оценка
              th
          tbody
            each resolve in resolves
              tr
                td= resolve.problem
                td= resolve.resolve
                td
                  input.rating-loading(value="#{resolve.rate}", data-size="xs")
                td
                  if root === 3
                    form(action='/edit/all/id/#{resolve.id}', method='get')
                      button.btn.btn-default(type='submit')
                        span.glyphicon.glyphicon-pencil
                  else if root === 2
                    form(action='/edit/rate/id/#{resolve.id}', method='get')
                      button.btn.btn-default(type='submit')
                        span.glyphicon.glyphicon-pencil
                  else if root === 1
                    form(action='/edit/problem/id/#{resolve.id}', method='get')
                      button.btn.btn-default(type='submit')
                        span.glyphicon.glyphicon-pencil
  script.
    $('.rating-loading').rating({displayOnly: true, step: 1});
