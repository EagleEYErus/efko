extends layout

block content
  .container
    .col-sm-10
      .row
        h1= title
        form(action='/auth', method='post')
          label.control-label Логин:
          input.form-control(type='text', name='username', placeholder='Логин', required)
          label.control-label Пароль:
          input.form-control(type='password', name='password', placeholder='Пароль', required)
          button.btn.btn-primary(type='submit') Войти
